
@model ImageProcessor.Models.ImageModel


@{
    ViewData["Title"] = "Uploaded Image";
}


<h3>Image has been uploaded successfully</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TargetWidth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TargetWidth)
        </dd>

         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TargetHeight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TargetHeight)
        </dd>

        <dt class="col-sm-2">
            Uploaded Image
        </dt>
   
        <dd class="col-sm-10">
            <img src="@(Model.TargetPath)" alt="resized image" asp-append-version="true" width="250px" height="250px"/>

        </dd>
    </dl>
</div>